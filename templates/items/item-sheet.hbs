<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'BITD.Name'}}"/></h1>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body flex-vertical">
      {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
      <label class="label-stripe">{{localize "BITD.Loadout"}}</label>
      <input data-dtype="Number" type="text" name="data.load" value="{{data.load}}">
      <label class="label-stripe">{{localize "BITD.Uses"}}</label>
      <input  data-dtype="Number" id="item-uses" type="text" name="data.uses.max" value="{{data.uses.max}}">
      <label class="label-stripe">{{localize "BITD.NumberAvailable"}}</label>
      <input  data-dtype="Number" id="item-num_available" type="text" name="data.num_available" value="{{data.num_available}}">
      {{#if isGM}}
        <div class="label-stripe">{{localize "BITD.Effects"}}</div>
        <div id="effects">{{> "systems/eunos-blades/templates/parts/active-effects.hbs"}}</div>
      {{/if}}
    </section>
</form>

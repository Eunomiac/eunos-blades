<form class="{{cssClass}}" autocomplete="off">

  {{!-- Item Img --}}
  <img class="sheet-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />

  {{!-- Tags --}}
  {{#if isGM}}
  <input type="text" class="comp-tags tags-gm" />
  {{/if}}

  {{!-- Sheet Container --}}
  <div class="sheet-root">

    {{!-- Header --}}
    <section class="sheet-top">

      <input class="sheet-title shadowed" type="text" name="name" value="{{item.name}}" placeholder="What Is This?" />

      {{> "systems/eunos-blades/templates/components/comp.hbs" tierData}}

    </section>

    {{!-- Body --}}
    <section class="tab-content flex-vertical">

      {{#if isEmbeddedItem}}
      <label class="tab-label">
        <span class="tab-title">Description</span>
      </label>
      {{editor system.description target="system.description" button=true owner=owner editable=editable}}
      {{/if}}

      <label class="tab-label">
        <span class="tab-title">Rules</span>
      </label>
      {{editor system.rules target="system.rules" button=true owner=owner editable=editable}}

      <label class="tab-label">
        <span class="tab-title">Notes</span>
      </label>
      {{editor system.notes target="system.notes" button=true owner=owner editable=editable}}

      {{#if isGM}}
      <label class="tab-label">
        <span class="tab-title">GM Notes</span>
      </label>
      {{editor system.gm_notes target="system.gm_notes" button=true owner=owner editable=editable}}
      {{/if}}

      <div class="flex-horizontal">
        <div class="comp comp-horizontal">
          <label>Load: </label>
          <input data-dtype="Number" type="number" name="system.load" value="{{system.load}}">
        </div>
        <div class="comp comp-horizontal">
          <label>Uses: </label>
          <input data-dtype="Number" type="number" name="system.uses.max" value="{{system.uses.max}}">
        </div>
        <div class="comp comp-horizontal">
          <label>Max per Score: </label>
          <input data-dtype="Number" type="number" name="system.num_available" value="{{system.num_available}}">
        </div>
      </div>

      {{#if isGM}}
      <label class="tab-label">
        <span class="tab-title">Active Effects</span>
      </label>
      {{> "systems/eunos-blades/templates/parts/active-effects.hbs"}}
      {{/if}}
    </section>
  </div>
</form>
<div id="character-{{actor._id}}-coins" class="flex-horizontal coin-box char-coins">

  <div id="character-{{actor._id}}-coins-hands" class="coin-hands-box">
    <div class="stripe">
      <label for="coins-{{actor._id}}-hands-0">{{localize "BITD.Coin"}}
        <i class="fab fa-creative-commons-zero nullifier"></i></label>
    </div>
    <div class="coins coins-hands">
      {{#multiboxes data.coins}}
      <input type="radio" data-dtype="Number" id="coins-{{actor._id}}-hands-0" name="data.coins" value="0" checked="checked">
      <input type="radio" data-dtype="Number" id="coins-{{actor._id}}-hands-1" name="data.coins" value="1">
      <label for="coins-{{actor._id}}-hands-1"></label>
      <input type="radio" data-dtype="Number" id="coins-{{actor._id}}-hands-2" name="data.coins" value="2">
      <label for="coins-{{actor._id}}-hands-2"></label>
      <input type="radio" data-dtype="Number" id="coins-{{actor._id}}-hands-3" name="data.coins" value="3">
      <label for="coins-{{actor._id}}-hands-3"></label>
      <input type="radio" data-dtype="Number" id="coins-{{actor._id}}-hands-4" name="data.coins" value="4">
      <label for="coins-{{actor._id}}-hands-4"></label>
      {{/multiboxes}}
    </div>
  </div>

</div>
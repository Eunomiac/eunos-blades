<form class="{{cssClass}} actor-sheet" autocomplete="off">

	<img class="sheet-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
	<div class="sheet-img-bg full-width">
		<img src="{{actor.img}}" />
	</div>

	{{#if playbookData}}
		{{> "systems/eunos-blades/templates/components/comp.hbs"
			class="comp-xp comp-xp-playbook comp-horizontal comp-teeth comp-teeth-long"
			dotline=playbookData.dotline
		}}
	{{/if}}

	{{!-- Header --}}
	<section class="sheet-top">
		<input class="sheet-title shadowed" type="text" name="name" value="{{actor.name}}">

		{{> "systems/eunos-blades/templates/components/comp.hbs" items.playbook
			class="comp-playbook comp-vertical"
			label="Playbook"
			addButton=true
		}}

		{{> "systems/eunos-blades/templates/components/comp.hbs" items.reputation
			class="comp-reputation comp-vertical"
			label="Reputation"
			cat="crew_reputation"
			addButton=true
		}}

		{{> "systems/eunos-blades/templates/components/comp.hbs" items.preferredOp
			class="comp-preferred-op comp-vertical"
			label="Preferred Op"
			cat="crew_preferred_op"
			addButton=true
		}}

		<div class="comp-tier comp-vertical comp">
 			<label>Tier</label>
			<div class="comp-body">
				{{> "systems/eunos-blades/templates/parts/dotline.hbs"
					data=data.tier
					target="data.tier.value"
					iconEmpty="coin-empty.svg"
					iconEmptyHover="coin-empty-hover.svg"
					iconFull="coin-full.svg"
					iconFullHover="coin-full-hover.svg"
					blockClass="centered"
				}}
			</div>
		</div>

		{{> "systems/eunos-blades/templates/components/comp.hbs" coinsData
			class="comp-coins comp-vertical" }}
	</section>

	{{!-- Rep/Turf, Heat, Wanted --}}
	<section class="sheet-mid-bar flex-horizontal full-width">

		{{> "systems/eunos-blades/templates/components/comp.hbs"
			class="comp-rep comp-horizontal comp-teeth comp-teeth-long"
			label=repData.name
			labelClass="filled-label"
			dotlines=repData.dotlines
		}}

		<div class="comp-hold comp-vertical comp">
			<label>Hold</label>
			{{#if hold}}
			<div class="comp-body" data-item-id="{{items.background._id}}">
				<img src="{{items.background.img}}" title="{{items.background.name}}" />
				<div class="comp-title shadowed">{{items.background.name}}</div>
			</div>
			{{/if}}
		</div>

		{{> "systems/eunos-blades/templates/components/comp.hbs"
			class="comp-rep comp-horizontal comp-teeth comp-teeth-long"
			label=heatData.name
			labelClass="filled-label"
			dotline=heatData.dotline
		}}

		{{> "systems/eunos-blades/templates/components/comp.hbs"
			class="comp-trauma comp-vertical comp-teeth comp-teeth-short"
			label=wantedData.name
			labelClass="filled-label"
			dotline=wantedData.dotline
		}}

	</section>

	{{!-- Members --}}
	<section class="members flex-horizontal full-width">
			<label class="dotline-label filled-label">Members</label>
	</section>

	{{!-- Navigable Tabs --}}
	<section class="tab-content nav-group flex-vertical">
		{{!-- Nav menu --}}
		<nav class="nav-tabs flex-horizontal">
			<a class="tab-selector" data-tab="claims">Claims</a>
			<a class="tab-selector" data-tab="upgrades">Upgrades</a>
			<a class="tab-selector" data-tab="abilities">Abilities</a>
			<a class="tab-selector" data-tab="cohorts">Cohorts</a>
			<a class="tab-selector" data-tab="notes">Notes</a>
			{{#if isGM}}
				<a class="tab-selector" data-tab="gm-notes">GM Notes</a>
				<a class="tab-selector" data-tab="all-character-items">All Items</a>
			{{/if}}
		</nav>

		{{!-- Claims --}}
    <div class="tab" data-tab="claims">
      {{#if items.playbook}}
      <div class="item" data-item-id="{{items.playbook._id}}">
      {{> "systems/eunos-blades/templates/parts/turf-list.hbs" actor=actor turfs_data=items.playbook.system.turfs can_edit=false}}
      </div>
      {{/if}}
    </div>




		{{!-- Crew Upgrades --}}
		<div class="tab abilities flex-vertical" data-tab="upgrades">
			<label class="tab-label">
				<a class="comp-control comp-add" data-item-type="crew_upgrade">
					<i class="fas fa-plus-square"></i>
				</a>
				<span class="tab-title">Crew Upgrades</span>
			</label>

			{{#each items.upgrades}}
				<div class="comp comp-horizontal item" data-item-id="{{_id}}">
					<label class="comp-title">
						<span class="item-title">{{case "title" name}}</span>
						<img class="item-img" src="{{img}}" />
					</label>
					<div class="comp-body">
						<div class="comp-body-text shadowed">{{{system.rules}}}</div>
					</div>
					<a class="comp-control comp-delete" title="{{localize 'BITD.TitleDeleteItem'}}">
						<i class="fas fa-trash"></i>
					</a>
				</div>
			{{/each}}
		</div>

    {{!-- Crew Abilities --}}
		<div class="tab abilities flex-vertical" data-tab="abilities">
			<label class="tab-label">
				<a class="comp-control comp-add" data-item-type="crew_ability">
					<i class="fas fa-plus-square"></i>
				</a>
				<span class="tab-title">Crew Abilities</span>
			</label>

			{{#each items.abilities}}
				<div class="comp comp-horizontal item" data-item-id="{{_id}}">
					<label class="comp-title">
						<span class="item-title">{{case "title" name}}</span>
						<img class="item-img" src="{{img}}" />
					</label>
					<div class="comp-body">
						<div class="comp-body-text shadowed">{{{system.rules}}}</div>
					</div>
					<a class="comp-control comp-delete" title="{{localize 'BITD.TitleDeleteItem'}}">
						<i class="fas fa-trash"></i>
					</a>
				</div>
			{{/each}}
		</div>

    {{!-- Cohorts --}}
		<div class="tab cohorts flex-vertical" data-tab="cohorts">
			<label class="tab-label">
				<a class="comp-control comp-add" data-item-type="cohort">
					<i class="fas fa-plus-square"></i>
				</a>
				<span class="tab-title">Cohorts: Gangs & Experts</span>
			</label>

			{{#each items.cohorts}}
				{{> "systems/eunos-blades/templates/parts/cohort-block.hbs" }}
			{{/each}}
		</div>

		{{!-- Description & Notes Tab --}}
		<div class="tab character-notes flex-vertical" data-tab="notes">
			<label class="tab-label">
				<span class="tab-title">Description</span>
			</label>
			{{editor content=data.description target="data.description" button=true owner=owner editable=editable}}

			<label class="tab-label">
				<span class="tab-title">{{localize "BITD.Notes"}}</span>
			</label>
			{{editor content=data.notes target="data.notes" button=true owner=owner editable=editable}}
		</div>
		{{!-- GM-ONLY TABS --}}
		{{#if isGM}}

			{{!-- GM Notes Tab --}}
			<div class="tab gm-notes flex-vertical" data-tab="gm-notes">
				<label class="tab-label">
					<span class="tab-title">GM Notes</span>
				</label>
				{{editor content=data.gm_notes target="data.gm_notes" button=true owner=owner editable=editable}}
			</div>


			{{!-- Full Item List Tab --}}
			<div class="tab all-items flex-vertical" data-tab="all-character-items">
				<label class="tab-label">
					<span class="tab-title">{{localize "BITD.AllItems"}}</span>
				</label>
				{{#each actor.items as |item id|}}
				<div class="item flex-horizontal" data-item-id="{{item._id}}">
					<div class="item-body item-sheet-open flex-horizontal">
						<img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
						<div class="comp-title">{{item.name}}</div>
					</div>
					<a class="comp-control comp-delete" title="{{localize 'BITD.TitleDeleteItem'}}">
						<i class="fas fa-trash"></i>
					</a>
				</div>
				{{/each}}
			</div>

		{{/if}}

	</section>
</form>

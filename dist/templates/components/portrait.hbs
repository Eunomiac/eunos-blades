<div class="comp comp-vertical portrait-block tooltip-trigger" data-comp-cat="{{cat}}" data-comp-type="{{docType}}" {{~#if id}} data-comp-id="{{id}}"{{/if}}>

  {{~#if label}}
    {{~#if id}}
      <label class="comp-label {{#if labelClass}}{{labelClass}} {{/if}}{{~#if tooltip}} tooltip-scaling-elem{{/if}} shadowed">
        {{~#if (test cat "&&" addButton)}}
          <a class="comp-control comp-add">{{label}}</a>
        {{else}}
          {{label}}
        {{/if~}}
      </label>
    {{~else}}
      <label class="comp-label {{~#if addButton}} comp-prompt{{/if}}{{~#if labelClass}} {{labelClass}}{{else}} shadowed{{/if}}{{~#if tooltip}} tooltip-scaling-elem{{/if}}">
        {{~#if addButton}}
          <a class="comp-control comp-add">
            <span class="sur-title">Select Your</span>
            <span class="main-title">{{label}}</span>
          </a>
        {{else}}
          {{label}}
        {{/if~}}
      </label>
    {{/if~}}
  {{else}}
      <label class="comp-label">&nbsp;</label>
  {{/if~}}

  <div class="comp-body">
    {{#if img}}<img class="comp-img{{~#if tooltip}} tooltip-scaling-elem{{/if}} " src="{{img}}" />{{/if}}
    {{#if name}}<div class="comp-title shadowed{{~#if tooltip}} tooltip-scaling-elem{{/if}}">{{name}}</div>{{/if}}
  </div>

  {{#if (test "Acquaintance" "in" system.tags)}}
  {{#unless (test system.status "==" false)}}
  <div class="comp-status-toggle status-toggle shadowed">
    {{#if (test system.status "==" -1)}}
    <span class="status-negative">▼</span>
    {{!-- <i class="fa-sharp fa-solid fa-caret-up fa-rotate-180"></i> --}}
    {{else}}{{#if (test system.status "==" 1)}}
    <span class="status-positive">▲</span>
    {{!-- <i class="fa-sharp fa-solid fa-caret-up"></i> --}}
    {{else}}
    <span class="status-neutral">◊</span>
    {{!-- <i class="fa-sharp fa-regular fa-diamond"></i> --}}
    {{/if}}
    {{/if}}
  </div>
  {{/unless}}
  {{/if}}

  {{#if (test id "&&" remButton)}}
  <a class="comp-control comp-delete comp-button" title="Delete item">
    <i class="fa-sharp fa-solid fa-xmark"></i>
  </a>
  {{/if}}

  {{#if tooltip}}
  <div class="tooltip {{tooltipClass}}">
    {{{tooltip}}}
  </div>
  {{/if}}

</div>